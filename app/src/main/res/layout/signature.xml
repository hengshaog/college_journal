<?xml version="1.0" encoding="utf-8"?>
<com.hengshao.app.college_journal.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">


        <com.hengshao.app.college_journal.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="10%"
                android:gravity="center"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="更新签名"/>

            <EditText
                android:id="@+id/signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="45%"
                app:layout_marginLeftPercent="5%"
                app:layout_marginRightPercent="5%"
                app:layout_marginTopPercent="5%"
                android:hint="输入新签名"
                android:paddingBottom="70dp"
                android:focusable="true"
                android:textCursorDrawable="@color/red"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="14sp"
                android:background="@drawable/edit_boder"/>

            <com.hengshao.app.college_journal.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_widthPercent="35%"
                app:layout_heightPercent="15%"
                android:foreground="@drawable/ripple_red"
                app:layout_marginTopPercent="10%"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/modify_sig_text">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    app:layout_widthPercent="68%"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:text="更改签名"
                    android:id="@+id/register_success_text" />

            </com.hengshao.app.college_journal.PercentLinearLayout>
        </com.hengshao.app.college_journal.PercentLinearLayout>
    </android.support.v7.widget.CardView>

</com.hengshao.app.college_journal.PercentLinearLayout>
